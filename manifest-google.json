{
    "manifest_version": 3,
    "name": "Wakatime for Onshape",
    "version": "2.0.1",
    "description": "Time tracking for Onshape",
    "permissions": [
        "storage",
        "unlimitedStorage",
        "alarms"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/128.png"
    },
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "background": {
        "service_worker": "scripts/service.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://cad.onshape.com/*"
            ],
            "js": [
                "scripts/moment.js",
                "scripts/browser.js",
                "scripts/core.js",
                "scripts/content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "scripts/core.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}